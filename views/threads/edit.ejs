<nav>
    <div>
        <a href="/forum/threads/<%= thread._id %>">Return to thread</a>
    </div>
</nav>
<main>
    <div class="textbox">
        <form action="/forum/threads/<%= thread._id %>?_method=PUT" method="POST">
            <textarea name="text"><%= thread.text %></textarea>
            <button type="submit">Edit Post</button>
        </form>
        <form action="/forum/threads/<%= thread._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete Post</button>
        </form>
    </div>
</main>


