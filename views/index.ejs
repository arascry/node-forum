<%- include('./partials/boiler') %>

<div class="login-overlay">
    <div id="msg-1" class="welcome">
        <p><i>Welcome to the Paracosm</i></p>
    </div>
    <div id="msg-2" class="welcome">
        <p>A website designed to connect you with other users to talk about your favorite subjects.</p>
    </div>
    <div id="msg-3" class="welcome">
        <p>To get started, simply log in via Google.</p>
    </div>
    <div id="login-prompt" class="welcome">Connect via Google</div>


</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<script>
    //Stairway to heaven
    $('.login-overlay').fadeIn(1000);
    $('#msg-1').delay(1000).fadeIn(1000, function () {
        $(this).click(function () {
            $(this).fadeOut(1000, function () {
                $('#msg-2').fadeIn(1000, function () {
                    $(this).click(function () {
                        $(this).fadeOut(1000, function () {
                            $('#msg-3').fadeIn(1000, function () {
                                $(this).click(function () {
                                    $(this).fadeOut(1000, function () {
                                        $('#login-prompt').fadeIn(1000, function () {
                                            $(this).click(function () {
                                                $(location).attr('href', '/auth/google');
                                            });
                                        });
                                    });
                                });
                            });
                        });
                    });
                });
            });
        });
    });

</script>
